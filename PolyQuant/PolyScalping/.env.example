# API Credentials (from Polymarket Settings -> API Keys)

# Private Key (EOA or Proxy)
# If using Proxy, this corresponds to the "Signing Key" of the proxy wallet.
POLYMARKET_PRIVATE_KEY=your_metamask_private_key_here
POLYMARKET_API_KEY=your_api_key_from_polymarket_ui
POLYMARKET_API_SECRET=your_api_secret_from_polymarket_ui
POLYMARKET_API_PASSPHRASE=your_api_passphrase_from_polymarket_ui
USE_PROXY=true # Set to true if using MetaMask/email login (Standard Polymarket account)

# Wallet Address
# If using Proxy mode, this MUST be the Proxy/Funder address.
# If using EOA mode, this is your main wallet address.
POLYMARKET_WALLET_ADDRESS=

# Trading Configuration
TRADING_ENABLED=False
MAX_CONCURRENT_MARKETS=2
MAX_POSITION_SIZE_USDC=100
DAILY_LOSS_LIMIT_USDC=50

# Telegram Configuration (Optional, for notifications)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Logging
LOG_LEVEL=INFO
